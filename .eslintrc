{
    "extends": ["eslint:recommended"],
    "rules": {
        "curly": [
            1,
            "multi-line"
        ],
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": [0]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "overrides": [
        {
          "files": ["*.test.js"],
          "extends": ["plugin:jest/recommended"]
        }
      ]
}
